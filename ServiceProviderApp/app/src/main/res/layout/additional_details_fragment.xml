<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtAdditionalDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutGallery"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:typeface="monospace"
        android:padding="5dp"
        android:text="Additional Details"
        android:textColor="@color/colorBlack"
        android:textSize="18sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtAdditionalDetails">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layoutSortDes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputSortDes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:paddingTop="5dp"
                    android:theme="@style/TextLabel">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/txtSortDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/sort_des"
                        android:inputType="text"
                        android:maxLines="1"
                        android:typeface="serif"
                        android:textColor="@color/title_color"
                        android:textColorHint="@color/colorDark"
                        android:textSize="15sp" />
                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutOpeningHours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutSortDes"
                android:background="@color/colorWhite">

                <LinearLayout
                    android:id="@+id/layoutLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_above="@+id/connectedLayout"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/inputOpening"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:paddingTop="5dp"
                        android:theme="@style/TextLabel">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/txtOpeningHours"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/opening_hours"
                            android:maxLines="1"
                            android:typeface="serif"
                            android:text=""
                            android:textColor="@color/title_color"
                            android:textColorHint="@color/colorDark"
                            android:textSize="15sp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/inputClosing"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:paddingTop="5dp"
                        android:theme="@style/TextLabel">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/txtClosingHours"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/closing_hours"
                            android:inputType="text"
                            android:maxLines="1"
                            android:typeface="serif"
                            android:text=""
                            android:textColor="@color/title_color"
                            android:textColorHint="@color/colorDark"
                            android:textSize="15sp" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>



            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutMrpPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutOpeningHours"
                android:background="@color/colorWhite">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputMrpPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:paddingTop="5dp"
                    android:theme="@style/TextLabel">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/txtMrpPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/mrp_price"
                        android:inputType="number"
                        android:maxLines="1"
                        android:typeface="serif"
                        android:text=""
                        android:textColor="@color/title_color"
                        android:textColorHint="@color/colorDark"
                        android:textSize="15sp" />
                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutSalePrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutMrpPrice"
                android:background="@color/colorWhite">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputSalePrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:paddingTop="5dp"
                    android:theme="@style/TextLabel">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/txtSalePrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/sale_price"
                        android:inputType="number"
                        android:maxLines="1"
                        android:text=""
                        android:typeface="serif"
                        android:textColor="@color/title_color"
                        android:textColorHint="@color/colorDark"
                        android:textSize="15sp" />
                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/PaymentLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutSalePrice"
                android:background="@color/colorWhite">

                <RadioGroup
                    android:id="@+id/paymentGroup"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/radioBtnOneTimePayment"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="One Time Payment"
                        android:typeface="monospace"
                        android:textColor="@color/colorDark"
                        android:textSize="15sp" />

                    <RadioButton
                        android:id="@+id/radioBtnRecursivePayment"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Recursive Payment"
                        android:typeface="monospace"
                        android:textColor="@color/colorDark"
                        android:textSize="15sp" />

                </RadioGroup>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/paymentOptionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/PaymentLayout"
                android:background="@color/colorWhite"
                android:visibility="gone">

                <RadioGroup
                    android:id="@+id/paymentOptGroup"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/radioBtnEveryMonth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Every Months"
                        android:typeface="monospace"
                        android:textColor="@color/colorDark"
                        android:textSize="15sp" />

                    <RadioButton
                        android:id="@+id/radioBtnSixMonth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Six Month"
                        android:typeface="monospace"
                        android:textColor="@color/colorDark"
                        android:textSize="15sp" />

                    <RadioButton
                        android:id="@+id/radioBtnYearly"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Yearly"
                        android:typeface="monospace"
                        android:textColor="@color/colorDark"
                        android:textSize="15sp" />

                </RadioGroup>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bottomLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_horizontal_margin">

                <Button
                    android:id="@+id/btnBack"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/sign_in_selector"
                    android:text="Back"
                    android:typeface="monospace"
                    android:textColor="@color/colorWhite" />

                <Button
                    android:id="@+id/btnNext"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/sign_up_selector"
                    android:text="Next"
                    android:typeface="monospace"
                    android:textColor="@color/colorWhite" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>